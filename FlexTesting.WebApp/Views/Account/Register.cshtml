@model FlexTesting.Core.Contract.User.Dtos.NewUserDto
 
<div class="card py-xl-3 px-xl-5" style="margin: 3% 35%;">
    <h2>Регистрация</h2>
    <a asp-action="Login" asp-controller="Account">Авторизация</a>
    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div>
                <label asp-for="Login">Введите логин:</label><br />
                <input class="form-control" type="text" asp-for="Login" />
                <span asp-validation-for="Login"></span>
            </div>
            <div>
                <label asp-for="Email">Введите email:</label><br />
                <input type="text" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password">Введите пароль:</label><br />
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword">Подтвердите пароль:</label><br />
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div>
                <label asp-for="FirstName">Введите имя:</label><br />
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div>
                <label asp-for="LastName">Введите фамилию:</label><br />
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName"></span>
            </div>
            <div>
                <label asp-for="MiddleName">Введите отчество:</label><br />
                <input asp-for="MiddleName" class="form-control" />
                <span asp-validation-for="MiddleName"></span>
            </div>
            <div>
                <label asp-for="Bio">Расскажите о себе:</label><br />
                <textarea asp-for="Bio" class="form-control"></textarea>
                <span asp-validation-for="Bio"></span>
            </div>
            <div>
                <input class="btn btn-primary my-xl-3" type="submit" value="Регистрация" />
            </div>
        </div>
    </form>
</div>