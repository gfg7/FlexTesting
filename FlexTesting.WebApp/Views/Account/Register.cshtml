@model FlexTesting.Core.Contract.User.Dtos.NewUserDto
 
<h2>Регистрация</h2>
 
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Login">Введите логин</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="FirstName">Введите имя</label><br />
            <input asp-for="FirstName" />
            <span asp-validation-for="FirstName" />
        </div>       
        <div>
            <label asp-for="LastName">Введите фамилию</label><br />
            <input asp-for="LastName" />
            <span asp-validation-for="LastName" />
        </div>         
        <div>
            <label asp-for="MiddleName">Введите отчество</label><br />
            <input asp-for="MiddleName" />
            <span asp-validation-for="MiddleName" />
        </div>     
        <div>
            <label asp-for="Bio">Расскажите о себе</label><br />
            <input type="text" asp-for="Bio" />
            <span asp-validation-for="Bio" />
        </div>           
        @*<div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>*@
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>